{{#if defaultBranch.isLoading}}

  {{loading-indicator}}

{{else if defaultBranch.last_build}}

  <section class="overview-section">
    {{build-history repo=repo}}
  </section>

  <section class="overview-section">
    <h2 class="small-title">Default Branch</h2>
    {{branch-row build=defaultBranch}}
  </section>

  <section class="overview-section">
    <h2 class="small-title">Current Streak</h2>
    {{streak-item repo=repo}}
  </section>

  <section class="overview-section">
    {{build-duration repo=repo}}
  </section>

{{else}}

  {{no-builds}}

{{/if}}
